<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Activity Log | Admin</title>
  <link rel="stylesheet" href="../styles.css">
</head>
<body>
  <div class="container" style="max-width: 800px;">
    <h2>GPS Activity Audit</h2>
    <div id="logContent">Loading activity...</div>
  </div>
  <script>
    const scriptURL = 'https://script.google.com/macros/s/AKfycbzQT7DP6beojo_8pcOP3VFPcsBhvxI1nUYxbUQvThdnWuMvw8InEogp2TwoKS9RQ_M5/exec';
    async function loadLogs() {
        const res = await fetch(scriptURL + "?action=getDashboard"); // Uses the getter in Code.gs
        const data = await res.json();
        // Simple display logic for the audit trail
        document.getElementById('logContent').innerHTML = data.applicants.map(a => `
            <div class="card">
                <b>${a.name}</b> applied for ${a.trade}<br>
                Status: ${a.status}
            </div>
        `).join('');
    }
    window.onload = loadLogs;
  </script>
</body>
</html>
