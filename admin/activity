<body>

<div class="container">
  <div class="admin-nav">
    <a href="index.html">Crew Roster</a>
    <a href="activity.html" class="active">Site Activity Log</a>
  </div>

  <button class="refresh-btn" onclick="loadActivity()">üîÑ Refresh Feed</button>
  <h2>Recent Site Check-Ins</h2>
  
  <div id="activityList">Loading logs...</div>
</div>

<script>
  const scriptURL = 'https://script.google.com/macros/s/AKfycbx3JdShPWsv2leCEdh7Q7ebzbu3HZHXSGJgG3wgeKf7r2vvE-3YKKzHIiEmdTmIRZKg/exec';

  async function loadActivity() {
    const list = document.getElementById('activityList');
    list.innerHTML = '<p style="text-align:center;">Fetching latest data...</p>';
    
    try {
      // Note: Added a timestamp to the URL to prevent browser caching
      const resp = await fetch(`${scriptURL}?action=getActivity&t=${Date.now()}`);
      const logs = await resp.json();
      
      // We want NEWEST check-ins at the top
      logs.reverse();

      let html = '';
      logs.forEach(log => {
        // Fallback: If mapLink isn't provided by GAS, we generate it from Lat/Lng
        const mapUrl = log.mapLink || `https://www.google.com/maps?q=${log.lat},${log.lng}`;
        
        html += `
          <div class="log-entry">
            <div class="log-meta">üìÖ ${new Date(log.timestamp).toLocaleString()}</div>
            <strong class="worker-name">${log.email}</strong> 
            <span style="color: #6E797F;">checked in from the field.</span>
            <br>
            <a href="${mapUrl}" target="_blank" class="map-btn">üìç View on Google Maps</a>
          </div>
        `;
      });
      list.innerHTML = html || '<p style="text-align:center;">No activity logged yet.</p>';
    } catch (err) {
      list.innerHTML = '<p style="color:red; text-align:center;">‚ö†Ô∏è Error loading logs. Check your Apps Script permissions.</p>';
    }
  }

  window.onload = loadActivity;
</script>
</body>
</html>
