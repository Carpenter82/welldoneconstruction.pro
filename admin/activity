<body>

    <div class="header">
        <div>
            <h1 style="margin:0; font-size: 1.5rem;">GPS Audit Trail</h1>
            <small>Live Field Check-ins</small>
        </div>
        <div class="nav-links">
            <a href="index.html">üè† Roster</a>
            <a href="projects.html">üìã All Projects</a>
            <a href="activity.html">üìç GPS Activity</a>
        </div>
    </div>

    <div id="activityLog">
        <p style="text-align:center; padding:50px; color:#999;">üì° Syncing GPS Logs...</p>
    </div>

    <script>
        const scriptURL = 'https://script.google.com/macros/s/AKfycbyN1uUGRDmEYax-dyv5VB5xpzYGfKdQ8by-uMq82eBBUFjk3ETj9juCd9ax6E5IzWMt/exec';

        async function loadActivity() {
            const container = document.getElementById('activityLog');
            try {
                const resp = await fetch(`${scriptURL}?action=getActivity&t=${Date.now()}`);
                const logs = await resp.json();

                if (!logs || logs.length === 0) {
                    container.innerHTML = '<p style="text-align:center; margin-top:50px;">No recent GPS pings found.</p>';
                    return;
                }

                container.innerHTML = [...logs].reverse().map(l => `
                    <div class="activity-card">
                        <div class="activity-details">
                            <strong>${l.email.split('@')[0].toUpperCase()}</strong>
                            <small>üïí ${new Date(l.timestamp).toLocaleString()}</small>
                        </div>
                        <a href="${l.mapLink}" target="_blank" class="btn-map">üìç View on Map</a>
                    </div>
                `).join('');
            } catch (e) {
                container.innerHTML = '<p style="color:red; text-align:center;">Error loading GPS trail.</p>';
            }
        }
        window.onload = loadActivity;
    </script>
</body>
